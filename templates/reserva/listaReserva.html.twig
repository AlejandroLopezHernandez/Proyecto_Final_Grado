{# templates/reserva/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gestión de Reservas{% endblock %}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
<link rel="stylesheet" href="{{ asset('css/listaReserva.css')}}">
{% endblock %}
{% block body %}
    <div class="container">
        <h1>Gestión de Reservas</h1>
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        
        <a href="{{ path('app_nueva_reserva') }}" class="btn btn-primary mb-3" id="botonNuevaReserva">Nueva Reserva</a>
        
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Reservas Actuales</h5>
            </div>
            <div class="card-body" id="listaReservas">
                {% if reservas|length > 0 %}
                <table class="table table-striped" id="tablaInterna">
                    <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Email</th>
                            <th>Hora</th>
                            <th>Comensales</th>
                            <th>Mesa</th>
                            <th>Estado</th>
                            <th>Información adicional</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reserva in reservas %}
                        <tr>
                            <td>{{ reserva.nombreCliente }}</td>
                            <td>{{ reserva.emailCliente }}</td>
                            <td>{{ reserva.fechaHoraReserva ? reserva.fechaHoraReserva|date('d/m/Y H:i') : 'No especificada' }}</td>
                            <td>{{ reserva.numeroComensales }}</td>
                            <td>
                                {% if reserva.numeroMesa %}
                                    Mesa #{{ reserva.numeroMesa }}
                                {% else %}
                                    Sin asignar
                                {% endif %}
                            </td>
                            <td>
                                {% if reserva.estado %}
                                    <span class="badge {{ reserva.estado.badgeClass }}">
                                        {{ reserva.estado.label }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">Sin estado</span>
                                {% endif %}
                            </td>
                            <td>{{ reserva.infoAdicional }}</td>
                            <td>
                                {% if reserva.estado and reserva.estado.value == 'confirmada' %}
                                    <a href="{{ path('app_cancelar_reserva', {'id': reserva.id}) }}" 
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('¿Estás seguro de cancelar esta reserva?')">
                                        Cancelar
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% else %}
                <p>No hay reservas actualmente.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}