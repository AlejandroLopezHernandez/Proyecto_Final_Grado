{# templates/reserva/nueva.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nueva Reserva con Google Reservas{% endblock %}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
<link rel="stylesheet" href="{{ asset('css/formularioReserva.css')}}">
{% endblock %}
{% block body %}
    <div class="container">
        <h1>Nueva Reserva con Google Reservas</h1>
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="card" id="formularioInterno">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Datos de la Reserva</h5>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.nombreCliente) }}
                            {{ form_row(form.emailCliente) }}
                            {{ form_row(form.telefonoCliente) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.numeroComensales) }}
                            {{ form_row(form.fechaHoraReserva) }}
                            {{ form_row(form.infoAdicional) }}
                        </div>
                    </div>
                    
                    <div class="text-center mt-4">
                        <div class="google-reservation-box p-3 mb-4 border rounded bg-light" id="googleReservas">
                            <img src="https://www.google.com/images/branding/googlelogo/1x/googlelogo_color_272x92dp.png" alt="Google" height="30">
                            <span class="ms-2">Reservas</span>
                            <p class="small text-muted mt-2">Al hacer clic en "Reservar ahora", tu solicitud será procesada a través del sistema de Google Reservas (simulado)</p>
                        </div>
                        <button type="submit" class="btn btn-success btn-lg" id="botonReservar">
                            <i class="fas fa-calendar-check"></i> Reservar ahora
                        </button>
                        <a href="{{ path('app_reservas') }}" class="btn btn-secondary">Cancelar</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}